{
  "expo": {
    "name": "user_client",
    "slug": "user_client",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "userclient",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow app to use your location for reviewing places."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow app to access your photos to add images to reviews."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow app to access camera to take photos for reviews."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
